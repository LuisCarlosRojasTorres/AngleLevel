<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AngleLevelApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            >

            <Switch x:Name="Switch_Accel" HorizontalOptions="Center" IsToggled="False" Toggled="Switch_Accel_Toggled"/>
            <Label
                x:Name="AccelLabelX"
                Text="0"                
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label
                x:Name="AccelLabelY"
                Text="0"                
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label
                x:Name="AccelLabelZ"
                Text="0"                
                FontSize="Default"
                HorizontalOptions="Center" />
            <Label
                x:Name="AngleV"
                Text="0"                
                FontSize="Default"
                HorizontalOptions="Center" />

            <Button
                x:Name="Btn_Frontal"
                Text="Click me"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
